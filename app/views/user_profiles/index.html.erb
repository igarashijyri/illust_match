<p id="notice"><%= notice %></p>

<h1>User Profiles</h1>
  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <div class ="profile">
        <%= link_to "#{user_profile.name}", user_profile %><br>
        <% if @comment[user_profile.id - 1].present?  %>
          <%= image_tag @comment[user_profile.id - 1].image.variant(resize: "300x300") %>
        <% end %>
      </div>
    <% end %>
  </tbody>
</table>

<div class="logout">
  <%= link_to 'LOGOUT', destroy_user_session_path, method: :delete %>
</div>

